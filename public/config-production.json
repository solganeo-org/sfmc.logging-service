{
    "workflowApiVersion": "1.1",
    "metaData": {
      "icon": "images/log.png",
      "category": "custom"
    },
    "type": "REST",
    "lang": {
      "en-US": {
        "name": "Logging",
        "description": "[Production] Logging Custom Activity"
      }
    },
    "arguments": {
      "execute": {
        "inArguments": [],
        "url": "https://sfmc-logging-production.herokuapp.com/sfmc/execute",
        "outArguments": [],
        "timeout": 100000,
        "retryCount": 1,
        "retryDelay": 10000,
        "concurrentRequests": 5
      }
    },
    "outcomes": [
      {
        "arguments": {
          "branchResult": "sent"
        },
        "metaData": {
          "label": "Sent"
        }
      },
      {
        "arguments": {
          "branchResult": "notsent"
        },
        "metaData": {
          "label": "Not Sent"
        }
      }
    ],
    "configurationArguments": {
      "save": {
        "url": "https://sfmc-logging-production.herokuapp.com/sfmc/save",
        "verb": "POST",
        "useJwt": true
      },
      "publish": {
        "url": "https://sfmc-logging-production.herokuapp.com/sfmc/publish",
        "verb": "POST",
        "useJwt": true
      },
      "validate": {
        "url": "https://sfmc-logging-production.herokuapp.com/sfmc/validate",
        "verb": "POST",
        "useJwt": true
      },
      "stop": {
        "url": "https://sfmc-logging-production.herokuapp.com/sfmc/stop",
        "verb": "POST",
        "useJwt": true
      }
    },
    "userInterfaces": {
      "configModal": {
        "height": 620,
        "width": 800,
        "fullscreen": false
      }
    },
    "outcomes": [
      {
        "arguments": {
          "branchResult": "sent"
        },
        "metaData": {
          "label": "Sent"
        }
      },
      {
        "arguments": {
          "branchResult": "notsent"
        },
        "metaData": {
          "label": "Not Sent"
        }
      }
    ],
    "schema": {
      "arguments": {
        "execute": {
          "inArguments": [
            {
              "phoneNumber": {
                "dataType": "Phone",
                "isNullable": false,
                "direction": "in"
              }
            },
            {
              "emailAddress": {
                "dataType": "Email",
                "isNullable": false,
                "direction": "in"
              }
            }
          ],
          "outArguments": [
            {
              "foundSignupDate": {
                "dataType": "Date",
                "direction": "out",
                "access": "visible"
              }
            }
          ]
        }
      }
    }
  }
  